<nav>
  <img src="https://img.icons8.com/material-outlined/48/ffffff/menu--v1.png"/>
  <h1>REGISTER</h1>
  <img src="https://img.icons8.com/sf-black/48/ffffff/search.png"/>
</nav>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
<div class="center">
  <h2>Sign up</h2>
    

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"blue-btn thin-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
